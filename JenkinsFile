pipeline {
    agent Agent-1

    //build
    stages {
        stage('Build') { 
            steps {
                echo "Building"
            }
        }
        stage('Test') { 
            steps {
                echo "Testing"
            }
        }
        stage('Deploy') { 
            steps {
                echo "Deploying"
            }
        }
    }
    post {
        success {
            echo "Success"
        }
        always {
            echo "Always build success"
        }
        failure {
            echo "failure"
        }
    }
}